{
  "info": {
    "name": "Cognifast AI - Multi-Document Chat",
    "description": "Test multi-document context support for conversations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Get All Documents",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/documents",
          "host": ["{{base_url}}"],
          "path": ["api", "documents"]
        }
      },
      "response": []
    },
    {
      "name": "2. Start Conversation (Single Document)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const response = pm.response.json();",
              "if (response.success && response.conversation) {",
              "    pm.collectionVariables.set('conversation_id', response.conversation.id);",
              "    console.log('Conversation ID:', response.conversation.id);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"documentIds\": [\"{{document_id}}\"],\n  \"initialMessage\": \"What is this document about?\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/chat/conversations",
          "host": ["{{base_url}}"],
          "path": ["api", "chat", "conversations"]
        }
      },
      "response": []
    },
    {
      "name": "3. Start Conversation (Multiple Documents)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const response = pm.response.json();",
              "if (response.success && response.conversation) {",
              "    pm.collectionVariables.set('multi_conversation_id', response.conversation.id);",
              "    console.log('Multi-doc Conversation ID:', response.conversation.id);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"documentIds\": [\"{{document_id_1}}\", \"{{document_id_2}}\"],\n  \"initialMessage\": \"Compare these two documents\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/chat/conversations",
          "host": ["{{base_url}}"],
          "path": ["api", "chat", "conversations"]
        }
      },
      "response": []
    },
    {
      "name": "4. Send Message (Single Doc Conversation)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"message\": \"Tell me more details\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/chat/conversations/{{conversation_id}}/messages",
          "host": ["{{base_url}}"],
          "path": ["api", "chat", "conversations", "{{conversation_id}}", "messages"]
        }
      },
      "response": []
    },
    {
      "name": "5. Send Message (Multi-Doc Conversation)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"message\": \"What are the main differences?\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/chat/conversations/{{multi_conversation_id}}/messages",
          "host": ["{{base_url}}"],
          "path": ["api", "chat", "conversations", "{{multi_conversation_id}}", "messages"]
        }
      },
      "response": []
    },
    {
      "name": "6. Get Conversation History",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/chat/conversations/{{conversation_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "chat", "conversations", "{{conversation_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "7. List Conversations for Document",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/chat/documents/{{document_id}}/conversations",
          "host": ["{{base_url}}"],
          "path": ["api", "chat", "documents", "{{document_id}}", "conversations"]
        }
      },
      "response": []
    },
    {
      "name": "8. Delete Conversation",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/chat/conversations/{{conversation_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "chat", "conversations", "{{conversation_id}}"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "document_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "document_id_1",
      "value": "",
      "type": "string"
    },
    {
      "key": "document_id_2",
      "value": "",
      "type": "string"
    },
    {
      "key": "conversation_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "multi_conversation_id",
      "value": "",
      "type": "string"
    }
  ]
}

